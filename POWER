package RECURSSION;

import java.util.Scanner;

public class power {
    public static void main(String[] args) {
        int a=2;
        int b=4;
        int ans=1;
        System.out.println(pow(a,b,ans));
    }
    public static int pow(int a , int b,int ans){
        if(b==0){
            return ans;
        }
        return pow(a,b-1,ans*a);//tail recurssion
    }
}
